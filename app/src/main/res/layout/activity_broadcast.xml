<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp">


    <Button
        android:id="@+id/btnBcastSend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Send broadcast" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="It broadcast current time from Activity " />


    <Button
        android:id="@+id/btnToggleService"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="START Service" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="It start service which broadcast time data at specific interval" />

    <TextView
        android:id="@+id/txtBcastData"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="#c6c6c6"
        android:padding="10dp"
        android:text="Data Received : " />
</LinearLayout>