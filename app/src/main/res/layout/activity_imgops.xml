<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <Button
        android:id="@+id/btnimgvCrop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Crop Image" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#c6c6c6"
        android:orientation="vertical"
        android:padding="5dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Matrix Operations" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_imgvops_mat1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Scaling" />

            <Button
                android:id="@+id/btn_imgvops_mat2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rotation" />


            <Button
                android:id="@+id/btn_imgvops_mat3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Translation" />

            <Button
                android:id="@+id/btn_imgvops_mat4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tilt" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imgv_imgops_before"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@mipmap/ic_launcher" />

            <View
                android:layout_width="0dp"
                android:layout_height="2dp"
                android:layout_weight="1" />

            <ImageView
                android:id="@+id/imgv_imgops_after"
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:background="#a0a0a0" />
        </LinearLayout>
    </LinearLayout>


</LinearLayout>