<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txt_style_fontSizeTxtId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/span_text"
            android:textSize="24dp" />

        <TextView
            android:id="@+id/txt_style_boldTxtId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/span_text"
            android:textSize="24dp" />

        <TextView
            android:id="@+id/txt_style_italicTxtId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/span_text"
            android:textSize="24dp" />

        <TextView
            android:id="@+id/txt_style_bolditalicTxtId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/span_text"
            android:textSize="24dp" />

        <TextView
            android:id="@+id/txt_style_urlTxtId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/span_text"
            android:textSize="24dp" />

        <TextView
            android:id="@+id/txt_style_foregroundTxtId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/span_text"
            android:textSize="24dp" />

        <TextView
            android:id="@+id/txt_style_backgroundTxtId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/span_text"
            android:textSize="24dp" />

        <TextView
            android:id="@+id/txt_style_underlineTxtId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/span_text"
            android:textSize="24dp" />

        <TextView
            android:id="@+id/txt_style_strikeTxtId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/span_text"
            android:textSize="24dp" />

        <TextView
            android:id="@+id/txt_style_subTxtId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/span_text"
            android:textSize="24dp" />

        <TextView
            android:id="@+id/txt_style_superTxtId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/span_text"
            android:textSize="24dp" />

        <TextView
            android:id="@+id/txt_style_imageTxtId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/span_text"
            android:textSize="24dp" />

    </LinearLayout>

</ScrollView>